.goodsList{
  display: flex;
  flex-wrap:  wrap ;
  padding:0 10px;
}
.goodsList>view{
  flex:0 0 50%;
  padding:0 10px;
  margin-bottom: 20px;
  box-sizing: border-box;
  width: 50%; 
}
.goodsList>view .item{
  text-align: center;
}
.goodsList>view .item image{
  width:98%;
  height:auto;
  border:1rpx solid #ccc;
}
.goodsList>view .item .name{
  display: block;
  font-size:14px;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  text-align: left;
}
.goodsList>view .item view{
  margin-top:5px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.goodsList>view .item .price{
  color:red;
  font-size:20px;
}
.goodsList>view .item .time{
  color:#666;
  font-size:14px;
}