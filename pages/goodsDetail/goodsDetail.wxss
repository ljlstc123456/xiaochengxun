swiper{
  height: 300px;
}
swiper-item{
  text-align: center;
  background: #efefef;
}
.slide-image{
  width:100%;
  height:100%;
}
.detail,.require{
  margin-top: 20px;
  padding: 0 30rpx;
}
.require{
  font-size:16px;
  color:#333;
}
.require text{
  display: block;
  line-height: 35px;
}
.info{
  font-size:16px;
  color:#888;
  line-height: 40px;
  border-bottom: 1rpx solid #efefef;
}
.info-value{
  color:#333;
}
.price{
  font-size: 20px;
  color:red;
}
.title{
  padding-left: 50rpx;
  background: #efefef;
  color:#888;
  font-size: 14px;
  line-height: 60rpx;
}